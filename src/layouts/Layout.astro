---
import "../styles/global.css";
import CookieConsent from "../components/CookieConsent.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  imageAlt?: string;
}

const {
  title,
  description = "Join MakerFriends - Connect with makers, share projects, and inspire creativity in STEM/STEAM learning!",
  image = "https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?w=1200&h=630&fit=crop",
  imageAlt = "Makers working together in a collaborative environment",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#3b82f6" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <link rel="canonical" href={`${Astro.site}${Astro.url.pathname}`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | MakerFriends</title>

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:alt" content={imageAlt} />
    <meta property="og:url" content={`${Astro.site}${Astro.url.pathname}`} />
    <meta property="og:site_name" content="MakerFriends" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta name="twitter:image:alt" content={imageAlt} />
    <meta name="twitter:site" content="@makerfriends" />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "MakerFriends",
        "url": "https://makerfriends.com",
        "logo": "https://makerfriends.com/favicon.svg",
        "description": "Connect with makers, share projects, and inspire creativity in STEM/STEAM learning!",
        "foundingDate": "2020",
        "sameAs": [
          "https://facebook.com/makerfriends",
          "https://twitter.com/makerfriends",
          "https://instagram.com/makerfriends",
          "https://youtube.com/makerfriends",
          "https://github.com/makerfriends"
        ],
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "customer service",
          "email": "contact@makerfriends.com"
        },
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "US"
        }
      }
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />

    <!-- Cookie Consent Banner -->
    <CookieConsent />
  </body>
</html>
