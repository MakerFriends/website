---

<Layout
  title="Maker Directory"
  description="Connect with makers worldwide. Browse our directory of talented creators and find collaborators for your next project."
>
  <Navigation />

  <main class="flex-1">
    <!-- Hero Section -->
    <section
      class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-r from-indigo-600 to-purple-600 text-white"
    >
      <div class="max-w-7xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Maker Directory</h1>
        <p class="text-xl md:text-2xl max-w-3xl mx-auto">
          Connect with talented makers from around the world. Find
          collaborators, mentors, and friends!
        </p>
      </div>
    </section>

    <!-- Search and Filter -->
    <section
      class="py-8 px-4 sm:px-6 lg:px-8 bg-white/70 sticky top-20 z-40 backdrop-blur-sm shadow-md"
    >
      <div class="max-w-7xl mx-auto">
        <div class="flex flex-col md:flex-row gap-4">
          <input
            type="text"
            placeholder="Search makers by name or skill..."
            class="flex-1 px-6 py-3 rounded-full border-2 border-gray-300 focus:border-blue-500 focus:outline-none"
          />
          <select
            class="px-6 py-3 rounded-full border-2 border-gray-300 focus:border-blue-500 focus:outline-none bg-white"
          >
            <option>All Locations</option>
            <option>North America</option>
            <option>Europe</option>
            <option>Asia</option>
            <option>Australia</option>
          </select>
        </div>
      </div>
    </section>

    <!-- Skill Categories -->
    <section
      class="py-8 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-blue-50 to-purple-50"
    >
      <div class="max-w-7xl mx-auto">
        <div class="flex flex-wrap gap-3 justify-center">
          {
            skillCategories.map((category) => (
              <button class="px-4 py-2 bg-white rounded-full font-medium hover:bg-blue-100 transition-colors shadow-sm">
                {category.icon} {category.name} ({category.count})
              </button>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Makers Grid -->
    <section class="py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            makers.map((maker) => (
              <article class="bg-white rounded-xl shadow-lg p-6 hover:shadow-2xl transition-all hover:-translate-y-1">
                <div class="flex items-start space-x-4">
                  <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-xl flex-shrink-0">
                    {maker.image}
                  </div>
                  <div class="flex-1 min-w-0">
                    <h3 class="text-xl font-bold text-gray-900 mb-1">
                      {maker.name}
                    </h3>
                    <p class="text-sm text-gray-500 mb-2">
                      üìç {maker.location}
                    </p>
                    <p class="text-sm text-blue-600 font-medium mb-3">
                      {maker.projects} Projects
                    </p>
                  </div>
                </div>
                <p class="text-gray-600 mt-4 mb-4">{maker.bio}</p>
                <div class="flex flex-wrap gap-2 mb-4">
                  {maker.skills.map((skill) => (
                    <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
                      {skill}
                    </span>
                  ))}
                </div>
                <div class="flex gap-2">
                  <button class="flex-1 px-4 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors">
                    View Profile
                  </button>
                  <button class="px-4 py-2 border-2 border-blue-600 text-blue-600 rounded-lg font-medium hover:bg-blue-50 transition-colors">
