---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Join MakerFriends"
  description="Create your free MakerFriends account and join thousands of makers worldwide!"
>
  <Navigation />

  <main class="flex-1">
    <!-- Hero Section -->
    <section
      class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-r from-blue-600 to-purple-600 text-white"
    >
      <div class="max-w-7xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Join MakerFriends! 🚀
        </h1>
        <p class="text-xl md:text-2xl max-w-3xl mx-auto">
          Create your free account and start connecting with makers worldwide
        </p>
      </div>
    </section>

    <!-- Benefits Section -->
    <section
      class="py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-blue-50 to-purple-50"
    >
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-4 gap-6 text-center">
          <div>
            <div class="text-4xl mb-3">🎨</div>
            <h3 class="font-bold text-gray-900 mb-2">Share Projects</h3>
            <p class="text-sm text-gray-600">Upload unlimited projects</p>
          </div>
          <div>
            <div class="text-4xl mb-3">👥</div>
            <h3 class="font-bold text-gray-900 mb-2">Connect</h3>
            <p class="text-sm text-gray-600">Meet makers worldwide</p>
          </div>
          <div>
            <div class="text-4xl mb-3">📚</div>
            <h3 class="font-bold text-gray-900 mb-2">Learn</h3>
            <p class="text-sm text-gray-600">Access tutorials & guides</p>
          </div>
          <div>
            <div class="text-4xl mb-3">🏆</div>
            <h3 class="font-bold text-gray-900 mb-2">Compete</h3>
            <p class="text-sm text-gray-600">Join maker challenges</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Sign Up Form -->
    <section class="py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl p-8 md:p-12">
          <h2 class="text-3xl font-bold text-center mb-8 text-gray-900">
            Create Your Account
          </h2>

          <form class="space-y-6">
            <!-- Full Name -->
            <div>
              <label
                for="fullname"
                class="block text-sm font-semibold text-gray-700 mb-2"
                >Full Name *</label
              >
              <input
                type="text"
                id="fullname"
                name="fullname"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 focus:border-blue-500 focus:outline-none transition-colors"
                placeholder="Jane Doe"
              />
            </div>

            <!-- Email -->
            <div>
              <label
                for="email"
                class="block text-sm font-semibold text-gray-700 mb-2"
                >Email Address *</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 focus:border-blue-500 focus:outline-none transition-colors"
                placeholder="jane@example.com"
              />
            </div>

            <!-- Username -->
            <div>
              <label
                for="username"
                class="block text-sm font-semibold text-gray-700 mb-2"
                >Username *</label
              >
              <input
                type="text"
                id="username"
                name="username"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 focus:border-blue-500 focus:outline-none transition-colors"
                placeholder="janedoe"
              />
              <p class="mt-1 text-sm text-gray-500">
                This will be your unique maker profile URL
              </p>
            </div>

            <!-- Password -->
            <div>
              <label
                for="password"
                class="block text-sm font-semibold text-gray-700 mb-2"
                >Password *</label
              >
              <input
                type="password"
                id="password"
                name="password"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 focus:border-blue-500 focus:outline-none transition-colors"
                placeholder="••••••••"
              />
              <p class="mt-1 text-sm text-gray-500">Minimum 8 characters</p>
            </div>

            <!-- Location -->
            <div>
              <label
                for="location"
                class="block text-sm font-semibold text-gray-700 mb-2"
                >Location</label
              >
              <input
                type="text"
                id="location"
                name="location"
                class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 focus:border-blue-500 focus:outline-none transition-colors"
                placeholder="City, Country"
              />
            </div>

            <!-- Skills/Interests -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                What are you interested in? (Select all that apply)
              </label>
              <div class="grid grid-cols-2 gap-3">
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input
                    type="checkbox"
                    name="skills"
                    value="electronics"
                    class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500"
                  />
                  <span class="text-sm text-gray-700">⚡ Electronics</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input
                    type="checkbox"
                    name="skills"
                    value="woodworking"
                    class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500"
                  />
                  <span class="text-sm text-gray-700">🪵 Woodworking</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input
                    type="checkbox"
                    name="skills"
                    value="robotics"
                    class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500"
                  />
                  <span class="text-sm text-gray-700">🤖 Robotics</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input
                    type="checkbox"
                    name="skills"
                    value="3d-printing"
                    class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500"
                  />
                  <span class="text-sm text-gray-700">🖨️ 3D Printing</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input
                    type="checkbox"
                    name="skills"
                    value="papercrafting"
                    class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500"
                  />
                  <span class="text-sm text-gray-700">📄 Papercrafting</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input
                    type="checkbox"
                    name="skills"
                    value="sewing"
                    class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500"
                  />
                  <span class="text-sm text-gray-700">🧵 Sewing</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input
                    type="checkbox"
                    name="skills"
                    value="arduino"
                    class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500"
                  />
                  <span class="text-sm text-gray-700">💻 Arduino</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input
                    type="checkbox"
                    name="skills"
                    value="raspberry-pi"
                    class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500"
                  />
                  <span class="text-sm text-gray-700">🥧 Raspberry Pi</span>
                </label>
              </div>
            </div>

            <!-- Experience Level -->
            <div>
              <label
                for="experience"
                class="block text-sm font-semibold text-gray-700 mb-2"
                >Experience Level</label
              >
              <select
                id="experience"
                name="experience"
                class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 focus:border-blue-500 focus:outline-none transition-colors"
              >
                <option value="beginner">Beginner - Just getting started</option
                >
                <option value="intermediate"
                  >Intermediate - Some experience</option
                >
                <option value="advanced">Advanced - Experienced maker</option>
                <option value="expert">Expert - Professional/Teacher</option>
              </select>
            </div>

            <!-- Newsletter -->
            <div class="flex items-start">
              <input
                type="checkbox"
                id="newsletter"
                name="newsletter"
                checked
                class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500 mt-1"
              />
              <label for="newsletter" class="ml-3 text-sm text-gray-700">
                Send me maker tips, project ideas, and community updates (you
                can unsubscribe anytime)
              </label>
            </div>

            <!-- Terms -->
            <div class="flex items-start">
              <input
                type="checkbox"
                id="terms"
                name="terms"
                required
                class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500 mt-1"
              />
              <label for="terms" class="ml-3 text-sm text-gray-700">
                I agree to the <a href="#" class="text-blue-600 hover:underline"
                  >Terms of Service</a
                > and
                <a href="#" class="text-blue-600 hover:underline"
                  >Privacy Policy</a
                > *
              </label>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-lg font-bold text-lg hover:shadow-xl transition-all hover:scale-105"
            >
              Create My Account 🎉
            </button>
          </form>

          <!-- Social Sign Up -->
          <div class="mt-8">
            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-300"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-4 bg-white text-gray-500">Or sign up with</span>
              </div>
            </div>

            <div class="mt-6 grid grid-cols-3 gap-4">
              <button
                class="px-4 py-3 bg-white border-2 border-gray-300 rounded-lg font-medium hover:bg-gray-50 transition-colors flex items-center justify-center"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
                  >
                  </path>
                </svg>
              </button>
              <button
                class="px-4 py-3 bg-white border-2 border-gray-300 rounded-lg font-medium hover:bg-gray-50 transition-colors flex items-center justify-center"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                    fill="#4285F4"
                  >
                  </path>
                  <path
                    d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                    fill="#34A853"
                  >
                  </path>
                  <path
                    d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                    fill="#FBBC05"
                  >
                  </path>
                  <path
                    d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                    fill="#EA4335"
                  >
                  </path>
                </svg>
              </button>
              <button
                class="px-4 py-3 bg-white border-2 border-gray-300 rounded-lg font-medium hover:bg-gray-50 transition-colors flex items-center justify-center"
              >
                <svg class="w-5 h-5" fill="#1877F2" viewBox="0 0 24 24">
                  <path
                    d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                  >
                  </path>
                </svg>
              </button>
            </div>
          </div>

          <!-- Sign In Link -->
          <div class="mt-8 text-center">
            <p class="text-gray-600">
              Already have an account?
              <a
                href="/login"
                class="text-blue-600 font-semibold hover:text-blue-800"
                >Sign in here</a
              >
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Trust Indicators -->
    <section
      class="py-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-blue-50 to-purple-50"
    >
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="text-4xl font-bold text-blue-600 mb-2">5,000+</div>
            <div class="text-gray-600">Active Makers</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-purple-600 mb-2">12,000+</div>
            <div class="text-gray-600">Projects Shared</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-pink-600 mb-2">100%</div>
            <div class="text-gray-600">Free Forever</div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
