---

<Layout
  title="MakerFriends Store"
  description="Shop official MakerFriends merchandise including t-shirts, hoodies, accessories, and more. Support the community while showing your maker pride!"
>
  <Navigation />

  <main class="flex-1">
    <!-- Hero Section -->
    <section
      class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-r from-purple-600 to-pink-600 text-white"
    >
      <div class="max-w-7xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          MakerFriends Store üõçÔ∏è
        </h1>
        <p class="text-xl md:text-2xl max-w-3xl mx-auto">
          Show your maker pride with official MakerFriends merchandise. Every
          purchase supports our community!
        </p>
      </div>
    </section>

    <!-- Store Stats -->
    <section
      class="py-8 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-blue-50 to-purple-50"
    >
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-3 gap-6 text-center">
          <div>
            <div class="text-3xl font-bold text-blue-600 mb-2">100%</div>
            <div class="text-gray-600">Proceeds Support Community</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-purple-600 mb-2">Premium</div>
            <div class="text-gray-600">Quality Materials</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-pink-600 mb-2">Fast</div>
            <div class="text-gray-600">Shipping Worldwide</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Category Filter -->
    <section
      class="py-8 px-4 sm:px-6 lg:px-8 bg-white/70 sticky top-20 z-40 backdrop-blur-sm shadow-md"
    >
      <div class="max-w-7xl mx-auto">
        <div class="flex flex-wrap gap-3 justify-center">
          <button
            class="px-4 py-2 bg-blue-600 text-white rounded-full font-medium hover:bg-blue-700 transition-colors"
          >
            All Products
          </button>
          <button
            class="px-4 py-2 bg-gray-200 text-gray-700 rounded-full font-medium hover:bg-gray-300 transition-colors"
          >
            üëï Apparel
          </button>
          <button
            class="px-4 py-2 bg-gray-200 text-gray-700 rounded-full font-medium hover:bg-gray-300 transition-colors"
          >
            üéí Accessories
          </button>
        </div>
      </div>
    </section>

    <!-- Products Grid -->
    <section class="py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {
            products.map((product) => (
              <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all hover:-translate-y-1">
                <div class="relative h-64 overflow-hidden">
                  <img
                    src={product.image}
                    alt={product.name}
                    class="w-full h-full object-cover"
                    loading="lazy"
                    decoding="async"
                  />
                  <div class="absolute top-4 right-4 bg-green-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                    ${product.price}
                  </div>
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-900 mb-2">
                    {product.name}
                  </h3>
                  <p class="text-gray-600 mb-4">{product.description}</p>

                  <div class="mb-4">
                    <div class="text-sm text-gray-500 mb-2">
                      Sizes: {product.sizes.join(", ")}
                    </div>
                    <div class="text-sm text-gray-500 mb-2">
                      Colors: {product.colors.join(", ")}
                    </div>
                  </div>

                  <div class="flex gap-2 mb-4">
                    <select class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                      <option>Select Size</option>
                      {product.sizes.map((size) => (
                        <option value={size}>{size}</option>
                      ))}
                    </select>
                    <select class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                      <option>Select Color</option>
                      {product.colors.map((color) => (
                        <option value={color}>{color}</option>
                      ))}
                    </select>
                  </div>

                  <button class="w-full px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-lg font-semibold hover:shadow-lg transition-all hover:scale-105">
                    Add to Cart üõí
                  </button>
                </div>
              </article>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Cart Summary (Placeholder) -->
    <section
      class="py-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-blue-50 to-purple-50"
    >
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl p-8">
          <h2 class="text-3xl font-bold text-center mb-8 text-gray-900">
            Shopping Cart
          </h2>
          <div class="text-center">
            <div class="text-6xl mb-4">üõí</div>
            <p class="text-gray-600 mb-6">
              Your cart is empty. Start shopping to add items!
            </p>
            <button
              class="px-8 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors"
            >
              Continue Shopping
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Support Section -->
    <section class="py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-4xl font-bold mb-6 text-gray-900">
              Every Purchase Makes a Difference
            </h2>
            <p class="text-lg text-gray-600 mb-6">
              When you shop at the MakerFriends Store, you're directly
              supporting our mission to promote STEM/STEAM education and connect
              makers worldwide.
            </p>
            <div class="space-y-4">
              <div class="flex items-start">
                <div class="text-2xl mr-3">üí∞</div>
                <div>
                  <h3 class="font-bold text-gray-900 mb-1">
                    Funds Community Programs
                  </h3>
                  <p class="text-gray-600">
                    Proceeds support workshops, maker grants, and educational
                    resources
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <div class="text-2xl mr-3">üåç</div>
                <div>
                  <h3 class="font-bold text-gray-900 mb-1">Global Impact</h3>
                  <p class="text-gray-600">
                    Help us reach underserved communities with maker education
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <div class="text-2xl mr-3">ü§ù</div>
                <div>
                  <h3 class="font-bold text-gray-900 mb-1">
                    Community Building
                  </h3>
                  <p class="text-gray-600">
                    Strengthen connections between makers worldwide
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div class="relative">
            <img
              src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=800&h=600&fit=crop"
              alt="MakerFriends community"
              class="rounded-2xl shadow-2xl"
              loading="lazy"
              decoding="async"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Shipping Info -->
    <section class="py-16 px-4 sm:px-6 lg:px-8 bg-white">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12 text-gray-900">
          Shipping & Returns
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="text-4xl mb-4">üöö</div>
            <h3 class="text-xl font-bold mb-3 text-gray-900">Fast Shipping</h3>
            <p class="text-gray-600">
              Free shipping on orders over $50. Standard delivery 3-5 business
              days.
            </p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-4">üîÑ</div>
            <h3 class="text-xl font-bold mb-3 text-gray-900">Easy Returns</h3>
            <p class="text-gray-600">
              30-day return policy. If you're not happy, we'll make it right!
            </p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-4">üåç</div>
            <h3 class="text-xl font-bold mb-3 text-gray-900">Worldwide</h3>
            <p class="text-gray-600">
              We ship to makers everywhere. International shipping available.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section
      class="py-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-r from-blue-600 to-purple-600 text-white"
    >
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-6">Questions About Our Store?</h2>
        <p class="text-xl mb-8">
          Need help with sizing, shipping, or have questions about our products?
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="px-8 py-4 bg-white text-blue-600 rounded-full font-bold text-lg hover:shadow-xl transition-all hover:scale-105"
          >
            Contact Support üìß
          </a>
          <a
            href="/about"
            class="px-8 py-4 border-2 border-white text-white rounded-full font-bold text-lg hover:bg-white hover:text-blue-600 transition-all"
          >
            Learn More
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
