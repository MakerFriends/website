# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSON files
[*.{js,jsx,ts,tsx,json}]
indent_size = 2

# Astro files
[*.astro]
indent_size = 2

# CSS, SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Package.json
[package.json]
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
