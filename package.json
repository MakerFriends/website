{
  "name": "makerfriends.com",
  "type": "module",
  "version": "1.5.0",
  "description": "MakerFriends - A vibrant community platform connecting makers worldwide",
  "author": "MakerFriends Team",
  "license": "MIT",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "type-check": "astro check",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "lint:strict": "eslint . --ext .js,.ts,.astro --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist .astro",
    "deploy:local": "npm run build && wrangler pages deploy dist --project-name=makerfriends-com-website",
    "deploy:preview": "wrangler pages deploy dist --project-name=makerfriends-com-website --env preview",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.6.0",
    "@tailwindcss/vite": "^4.1.15",
    "astro": "^5.15.9",
    "tailwindcss": "^4.1.15",
    "vite-plugin-compression": "^0.5.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.38.0",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  }
}
